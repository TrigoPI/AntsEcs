{
    "compilerOptions": {
      "target": "ES2017",                                    
      "module": "CommonJS",                                  
      "declaration": true,                                 
      "outDir": "./dist",                                  
      "rootDir": "./",                                     
      "esModuleInterop": true,                             
      "skipLibCheck": true,                                
      "forceConsistentCasingInFileNames": true,            
      "moduleResolution": "node",                          
      "resolveJsonModule": true,                           
      "isolatedModules": true,                             
    },
    "include": ["src", "test"],                            
    "exclude": ["node_modules", "dist"]                    
  }