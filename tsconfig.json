{
    "compilerOptions": {
      "target": "ES2017",                        
      "module": "CommonJS",
      "declaration": true,
      "outDir": "./dist",
      "rootDir": "./src",
      "baseUrl": "./",
      "esModuleInterop": true,
      "skipLibCheck": true,
      "forceConsistentCasingInFileNames": true,
      "resolveJsonModule": true,
      "isolatedModules": true,
      "moduleResolution": "node",
    },
    "include": ["src/**/*"],                            
    "exclude": ["node_modules", "dist"]                    
  }